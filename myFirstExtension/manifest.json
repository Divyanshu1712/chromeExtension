{
    "manifest_version": 3,
    "name": "Color Changer",
    "version": "1.0",
    "author": "Divyanshu Srivastava",
    "description": "change the background color of the page.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
